#include "cyBot_Scan.h"
#include "cyBot_uart.h"
#include "lcd.h"
#include "timer.h"

int main(void)
{
    timer_init();
    lcd_init();
    cyBot_uart_init();
    cyBOT_init_Scan(0b0111);

    char message[500];

    cyBOT_Scan_t sensor_data;

    int i =0;
    sprintf(message,"Degrees Distance [cm]\n");
    while(message[i] != '\n') {
        cyBot_sendByte(message[i]);
        i++;
    }
    cyBot_sendByte('e');


    for(i = 0; i <= 180; i = i+2){
        cyBOT_Scan(i, &sensor_data);
        sprintf(message, "%d      %f\n", i, sensor_data.sound_dist);
        int j = 0;
            while(message[j] != '\n')) {
                    cyBot_sendByte(message[j]);
                }
    }
}
